<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Ширина (м):" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="WidthTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Text="1.0"/>

        <Label Content="Высота (м):" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="HeightTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Text="1.0"/>

        <Label Content="Материал:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="5" Orientation="Horizontal">
            <RadioButton x:Name="AluminumRadio" Content="Алюминий" IsChecked="True" Margin="0,0,10,0"/>
            <RadioButton x:Name="PlasticRadio" Content="Пластик"/>
        </StackPanel>

        <Button x:Name="CalculateButton" Content="Рассчитать" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                Margin="5" Height="30" Click="CalculateButton_Click"/>

        <GroupBox Header="Результат расчета" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="SizeText" Grid.Row="0" Margin="5"/>
                <TextBlock x:Name="MaterialText" Grid.Row="1" Margin="5"/>
                <TextBlock x:Name="CostText" Grid.Row="2" Margin="5" FontWeight="Bold"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="История расчетов" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <ListView x:Name="HistoryListView" Margin="5" Height="100">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Date}" Width="120"/>
                        <GridViewColumn Header="Размер" DisplayMemberBinding="{Binding Size}" Width="100"/>
                        <GridViewColumn Header="Материал" DisplayMemberBinding="{Binding Material}" Width="80"/>
                        <GridViewColumn Header="Стоимость" DisplayMemberBinding="{Binding Cost}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="CreateReceiptButton" Content="Оформить квитанцию" Margin="5" Width="150" 
                    Height="30" Click="CreateReceiptButton_Click" IsEnabled="False"/>
            <Button x:Name="ClearHistoryButton" Content="Очистить историю" Margin="5" Width="150" 
                    Height="30" Click="ClearHistoryButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

